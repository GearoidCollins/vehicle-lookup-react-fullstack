    "webpack2-externals-plugin": "^1.0.0"
  },
  "engines": {
    "node": ">=4"
  },
  "ava": {
    "files": ["client/**/*.spec.js", "server/**/*.spec.js"],
    "source": ["client/**/*.js", "server/**/*.js"],
    "failFast": true,
    "babel": "inherit",
    "require": ["./server/utils/setup-test-env.js"]
  },
  "nyc": {
    "include": ["client/**/*.js", "server/**/*.js"],
    "exclude": [
      "**/*.spec.js",
      "client/reducers.js",
      "client/store.js",
      "client/routes.js",
      "server/utils/setup-test-env.js",
      "server/utils/test-helpers.js",
      "server/config.js",
      "server/dummyData.js"
    ],
    "reporter": ["lcov", "text", "html"]
  }
}
