{
  "name": "dvla-vrt-lookup",
  "version": "1.0.0",
  "description":
    "Application to calculate VRT(Vehicle Rad Tax) from a UK vehicle registration",
  "scripts": {
    "test":
      "cross-env NODE_ENV=test PORT=8080 MONGO_URL=mongodb://localhost:27017/dvla-vrt-lookup-test nyc ava",
    "watch:test": "npm run test -- --watch",
    "cover": "nyc npm run test",
    "check-coverage":
      "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "nyc":
      "MONGO_URL=mongodb://localhost:27017/dvla-vrt-lookup-test NODE_ENV=test nyc ava",
    "start": "cross-env BABEL_DISABLE_CACHE=1 NODE_ENV=development nodemon index.js",
    "start:prod": "NODE_ENV=production node index.js",
    "bs": "npm run clean && npm run build && npm run build:server && npm run start:prod",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js",
    "build:server":
      "cross-env NODE_ENV=production webpack --config webpack.config.server.js",
    "clean": "rimraf dist",
    "slate": "rimraf node_modules && npm install",
    "lint": "eslint client server"
  },
  "pre-commit": ["lint", "test"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GearoidCollins/dvla-vrt-lookup.git"
  },
  "author": "Gearoid Collins <gearoid@collins.ie>",
  "dependencies": {
    "axios": "^0.17.1",
    "babel-core": "^6.26.0",
    "babel-plugin-webpack-aliases": "^1.1.3",
    "babel-preset-env": "^1.6.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.3",
    "cross-env": "^5.1.3",
    "dvla-uk-vehicle-lookup": "^1.0.2",
    "enzyme-adapter-react-15": "^1.0.5",
    "express": "^4.16.2",
    "express-rate-limit": "^2.11.0",
    "helmet": "^3.9.0",
    "lodash": "^4.17.4",
    "lusca": "^1.5.2",
    "method-override": "^2.3.10",
    "mongoose": "^5.0.1",
    "morgan": "^1.9.0",
    "node-sass": "^4.7.2",
    "prop-types": "^15.6.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-helmet": "^5.2.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.1",
    "react-test-renderer": "15.6.1",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-webpack-loaders": "^0.9.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-native-modules": "^6.9.4",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^3.5.0",
    "chunk-manifest-webpack-plugin": "1.1.2",
    "coveralls": "^2.11.9",
    "css-loader": "^0.28.9",
    "css-modules-require-hook": "^4.2.3",
    "cssnano": "^3.10.0",
    "enzyme": "^3.3.0",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-ava": "^4.4.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
