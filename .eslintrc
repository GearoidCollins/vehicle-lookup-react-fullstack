{
  "extends": ["airbnb", "plugin:ava/recommended"],
  "parser": "babel-eslint",
  "plugins": ["ava"],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true
  },
  "rules": {
    "no-underscore-dangle": 0,
    "max-len": [1, { "code": 90, "ignoreComments": true }],
    "arrow-body-style": [0],
    "react/jsx-no-bind": [0],
    "import/no-unresolved": [0],
    "import/extensions": [0],
    "import/no-extraneous-dependencies": [0],
    "react/jsx-filename-extension": [0],
    "class-methods-use-this": [0],
    "import/no-named-as-default": [0]
  }
}
